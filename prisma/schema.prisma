generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Field {
  fieldCode     String  @id
  fieldName     String
  fieldLocation String
  fieldSize     String
  fieldImage    String
  crops         Crop[]
  staff         Staff[]
}

model Crop {
  cropCode           String @id
  cropCommonName     String
  cropScientificName String
  cropCategory       String
  cropSeason         String
  cropImage          String
  fieldCode          String // Foreign key reference
  field              Field  @relation(fields: [fieldCode], references: [fieldCode])
}

model Staff {
  staffCode     String   @id // Primary Key
  firstName     String
  lastName      String
  designation   String
  gender        String
  dob           DateTime
  address_one   String
  address_two   String?
  address_three String?
  contact       String
  email         String
  role          String // Foreign key reference
  join_date     DateTime
  fieldCode     String
  field         Field    @relation(fields: [fieldCode], references: [fieldCode])
}
